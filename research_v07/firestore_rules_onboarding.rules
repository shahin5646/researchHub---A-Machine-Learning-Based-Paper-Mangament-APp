rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read public profiles
      allow read: if resource.data.hasPublicProfile == true;
      
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
      
      // Authenticated users can create their profile
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Users can update specific fields
      allow update: if isOwner(userId) && 
        request.resource.data.keys().hasAll(['updatedAt']) &&
        request.resource.data.uid == resource.data.uid &&
        request.resource.data.email == resource.data.email;
    }
    
    // Research papers collection
    match /research_papers/{paperId} {
      // Public papers are readable by everyone
      allow read: if resource.data.visibility == 'public';
      
      // Private papers only readable by owner
      allow read: if isOwner(resource.data.uploadedBy);
      
      // Restricted papers readable by owner and authorized users
      // (Add custom logic here for restricted access)
      allow read: if resource.data.visibility == 'restricted' && 
        (isOwner(resource.data.uploadedBy) || 
         request.auth.uid in resource.data.get('authorizedUsers', []));
      
      // Only authenticated users can create papers
      allow create: if isSignedIn() && 
        request.resource.data.uploadedBy == request.auth.uid;
      
      // Only owners can update their papers
      allow update: if isOwner(resource.data.uploadedBy);
      
      // Only owners can delete their papers
      allow delete: if isOwner(resource.data.uploadedBy);
    }
    
    // Paper comments subcollection
    match /research_papers/{paperId}/comments/{commentId} {
      // Comments readable if parent paper is readable
      allow read: if true; // Inherits from parent paper rules
      
      // Authenticated users can create comments
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own comments
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Paper reactions subcollection
    match /research_papers/{paperId}/reactions/{reactionId} {
      // Reactions readable by all
      allow read: if true;
      
      // Users can create their own reactions
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own reactions
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Conversations collection (for messaging)
    match /conversations/{conversationId} {
      // Participants can read their conversations
      allow read: if isSignedIn() && 
        request.auth.uid in resource.data.participants;
      
      // Participants can create conversations
      allow create: if isSignedIn() && 
        request.auth.uid in request.resource.data.participants;
      
      // Participants can update conversations
      allow update: if isSignedIn() && 
        request.auth.uid in resource.data.participants;
    }
    
    // Messages subcollection
    match /conversations/{conversationId}/messages/{messageId} {
      // Participants can read messages
      allow read: if isSignedIn();
      
      // Users can send messages
      allow create: if isSignedIn() && 
        request.resource.data.senderId == request.auth.uid;
      
      // Users can update their own messages
      allow update: if isOwner(resource.data.senderId);
    }
    
    // Social features
    match /follow_relationships/{relationshipId} {
      // Anyone can read follow relationships
      allow read: if true;
      
      // Users can create follow relationships where they are the follower
      allow create: if isSignedIn() && 
        request.resource.data.followerId == request.auth.uid;
      
      // Users can delete their own follow relationships
      allow delete: if isOwner(resource.data.followerId);
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isOwner(resource.data.userId);
      
      // System can create notifications
      allow create: if isSignedIn();
      
      // Users can update their own notifications (mark as read)
      allow update: if isOwner(resource.data.userId);
      
      // Users can delete their own notifications
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
